<!-- Trigger/Open the Modal -->
<button onclick="document.getElementById('id01').style.display='block'" class="w3-button" id="modalBtn">Login</button>

<!-- The Modal -->
<div id="id01" class="w3-modal modalx">
  <div class="w3-modal-content">
    <div class="w3-container">
      <span onclick="document.getElementById('id01').style.display='none'"
        class="w3-button w3-display-topright">&times;</span><br><br>
      <div id="login-form">
        <form>
          <label for="email">Email: </label><br>
          <input type="text" id="email-login" name="email" /><br><br>
          <label for="password">Password: </label><br>
          <input type="password" id="password-login" name="password" /><br><br>
          <input type="submit" id="login" value="Login" /><br />
          <div id="errMsg"></div><br /><br>
          
        </form>
      </div>
    </div>
  </div>
</div>
</div>
